class Solution(object):
    def firstMissingPositive(self, nums):
        """
        :type nums: List[int]
        :rtype: int
        """
        n = len(nums)
        
        for i in range(n):
            # Swap until nums[i] is in the right place or out of range
            while 1 <= nums[i] <= n and nums[nums[i] - 1] != nums[i]:
                correct_idx = nums[i] - 1
                nums[i], nums[correct_idx] = nums[correct_idx], nums[i]

        # After sorting, check where the mismatch is
        for i in range(n):
            if nums[i] != i + 1:
                return i + 1

        return n + 1
